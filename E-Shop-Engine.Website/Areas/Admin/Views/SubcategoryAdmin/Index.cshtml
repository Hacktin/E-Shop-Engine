@model IEnumerable<E_Shop_Engine.Website.Areas.Admin.Models.SubcategoryAdminViewModel>

@{
    ViewBag.Title = "Subcategories";
}

<h2>Subcategories</h2>

<p class="text-right">
    @Html.ActionLink("Create new subcategory", "Create", null, new { @class = "btn btn-success" })
</p>

<div class=" table-responsive">
    <table class="table table-striped table-hover table-light text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Category
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mb-1" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm mb-1" })
                        @using (Html.BeginForm("Delete", null, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id)                            
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm mb-1" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>