@using E_Shop_Engine.Utilities;
@using E_Shop_Engine.Website.Extensions;
@using X.PagedList;
@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Common;
@using E_Shop_Engine.Website.Areas.Admin.Models;
@model IPagedList<OrderAdminViewModel>

@{
    ViewBag.Title = "Orders";
}

<h1>Orders</h1>

<div class=" table-responsive">
    <table class="table table-striped table-hover table-light text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    @Html.ActionLink("Id", "Index", new { page = 1, sortOrder = "Id", descending = false })
                </th>
                <th scope="col">
                    @Html.ActionLink("Created", "Index", new { page = 1, sortOrder = "Created", descending = true })
                </th>
                <th scope="col">
                    @Html.ActionLink("Is Paid?", "Index", new { page = 1, sortOrder = "IsPaid", descending = true })
                </th>
                <th scope="col">
                    @Html.ActionLink("Status", "Index", new { page = 1, sortOrder = "OrderStatus", descending = false })
                </th>
                <th scope="col">
                    @Html.ActionLink("Value", "Index", new { page = 1, sortOrder = "Payment", descending = true })
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPaid)
                    </td>
                    <td>
                        @{
                            var name = item.OrderStatus.GetDisplayName();
                            name = name == null ? item.OrderStatus.ToString() : name;
                        }
                        @Html.DisplayFor(modelItem => name)
                    </td>
                    <td>
                        @item.Payment @Html.Settings().Currency
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mb-1" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm mb-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.PagedListPager((IPagedList)Model, page => { return (Request.Url.LocalPath + "?page=" + page + "&sortOrder=" + ViewBag.SortOrder + "&descending=" + ViewBag.SortDescending); }, new PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" },
    UlElementClasses = new string[] { "pagination justify-content-center" },
    LinkToFirstPageFormat = "<<",
    LinkToPreviousPageFormat = "<",
    LinkToNextPageFormat = ">",
    LinkToLastPageFormat = ">>",
    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
    DisplayLinkToLastPage = PagedListDisplayMode.Always,
    DisplayEllipsesWhenNotShowingAllPageNumbers = true,
    MaximumPageNumbersToDisplay = 10
})