<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administration</title>
    @Scripts.Render("~/Bundles/universal")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container-fluid pl-0">
        <div class="d-flex h-90-vh">
            <ul class="nav flex-column bg-primary w-auto mr-2">
                <li class="nav-item">
                    @Html.ActionLink("Quit", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Products", "Index", "Product", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categories", "Index", "Category", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Subcategories", "Index", "Subcategory", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Users", "Index", "Account", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Roles", "Index", "AdminRole", null, new { @class = "nav-link text-white btn btn-primary" })
                </li>
            </ul>

            <div class="w-auto">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>