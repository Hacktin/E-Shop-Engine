@model IEnumerable<E_Shop_Engine.Website.Areas.Admin.Models.OrderAdminViewModel>

@{
    ViewBag.Title = "Orders";
}

<h3>Orders</h3>

<table class="table table-striped table-responsive-sm table-hover table-light text-center">
    <thead>
        <tr>
            <th scope="col">
                Id
            </th>
            <th scope="col">
                Created
            </th>
            <th scope="col">
                Is Paid?
            </th>
            <th scope="col">
                Status
            </th>
            <th scope="col">
                Value
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @item.OrderedCart.CartLines.Sum(x => x.Product.Price * x.Quantity)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mb-1" })
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm mb-1" })
            </td>
        </tr>
        }
    </tbody>
</table>