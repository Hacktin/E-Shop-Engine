@model E_Shop_Engine.Website.Areas.Admin.Models.SubcategoryAdminViewModel

@{
    ViewBag.Title = "Details " + Model.Name;
}

<h3>Details @Model.Name</h3>

<p>
    <a class="btn btn-primary text-white" href="@ViewBag.returnUrl">Go back</a>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-secondary" })
</p>

<div class="row text-center">
    <dl class="col-12">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Category</dt>
        <dd>@Html.DisplayFor(model => model.CategoryName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-products-tab" data-toggle="tab" href="#nav-products" role="tab" aria-controls="nav-products" aria-selected="true">Products</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-products" role="tabpanel" aria-labelledby="nav-products-tab">
        <table class="table table-striped table-responsive-sm table-hover table-light text-center">
            <thead>
                <tr>
                    <th scope="col">Catalog Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                <tr>
                    <th scope="row">@item.CatalogNumber</th>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Product", new { id = item.ID, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-info btn-sm mb-1" })
                        @Html.ActionLink("Edit", "Edit", "Product", new { id = item.ID, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-primary btn-sm mb-1" })                        
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>