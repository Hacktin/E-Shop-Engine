@model IEnumerable<E_Shop_Engine.Website.Areas.Admin.Models.UserAdminViewModel>
@{
    ViewBag.Title = "Users Accounts";
}

<h2>Users Accounts</h2>

<p class="text-right">
    @Html.ActionLink("Create new user", "Create", "Account", new { area = "" }, new { @class = "btn btn-success" })
</p>

<div class=" table-responsive">
    <table class="table table-striped table-hover table-light text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name and surname</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No User Accounts</td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name @user.Surname</td>
                        <td>@user.Email</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-primary btn-sm mb-1" })
                            @using (Html.BeginForm("Delete", null, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", user.Id)
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm mb-1" />
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>