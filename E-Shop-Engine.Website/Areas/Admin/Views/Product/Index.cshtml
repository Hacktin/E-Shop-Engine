@using E_Shop_Engine.Website.Areas.Admin.Models
@model List<ProductAdminViewModel>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p class="text-right">
    @Html.ActionLink("Create new product", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-responsive-sm table-hover table-light text-center">
    <thead>
        <tr>
            <th scope="col">
                Catalog Number
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Number In Stock
            </th>
            <th scope="col">
                Price
            </th>
            <th scope="col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.CatalogNumber)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-info btn-sm mb-1" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-primary btn-sm mb-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm mb-1" })
                </td>
            </tr>
        }
    </tbody>
</table>
