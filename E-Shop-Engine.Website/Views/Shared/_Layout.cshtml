<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Shop Demo</title>
    @Scripts.Render("~/Bundles/universal")
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary sticky-top">
        <a class="navbar-brand" href="/Home/Index">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="form-inline w-auto m-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Favourites", "Index", "Account", null, new { @class = "nav-link" })
                    }
                </li>
                <li class="nav-item active">
                    @Html.Action("CountItems", "Cart")
                </li>
                <li class="nav-item active">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Your Account", "Index", "Account", null, new { @class = "nav-link" })
                    }
                </li>
                <li class="nav-item active">
                    @if (HttpContext.Current.User.IsInRole("Administrators"))
                    {
                        @Html.ActionLink("Admin Panel", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })
                    }
                </li>
                <li class="nav-item active">
                    @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Sign In", "Create", "Account", null, new { @class = "nav-link" })
                    }
                </li>
                <li class="nav-item active">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "nav-link" })
                    }
                    else
                    {
                        @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "nav-link" })
                    }
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid pl-0">
        <div class="d-flex h-90-vh">
            @Html.Action("NavList", "Home")
            <div class="w-auto mx-auto">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year</p>
                </footer>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>