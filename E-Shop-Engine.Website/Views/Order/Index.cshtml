@model IEnumerable<E_Shop_Engine.Website.Models.OrderViewModel>

@{
    ViewBag.Title = "Your Orders";
    Layout = null;
}

<div class=" table-responsive">
    <table class="table table-striped table-hover table-light text-center">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    Created
                </th>
                <th scope="col">
                    Finished
                </th>
                <th scope="col">
                    Bought products
                </th>
                <th scope="col">
                    Total value
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Finished)
                    </td>
                    <td>
                        @item.OrderedCart.CartLines.Sum(x => x.Quantity)
                    </td>
                    <td>
                        @item.OrderedCart.CartLines.Sum(x => x.Product.Price * x.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Order", new { id = item.Id }, new { @class = "btn btn-info btn-sm mb-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>