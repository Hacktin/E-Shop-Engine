@model IEnumerable<E_Shop_Engine.Website.Models.OrderViewModel>

@{
    ViewBag.Title = "Order";
}

<h3>Order</h3>

<table class="table table-striped table-responsive-sm table-hover table-light text-center">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Finished)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IsPaid)
            </th>
            <th scope="col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Finished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPaid)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id, returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-info btn-sm mb-1" })
                </td>
            </tr>
        }
    </tbody>

</table>
