@model E_Shop_Engine.Website.Models.OrderViewModel

@{
    ViewBag.Title = "New Order";
}

<h1>New Order</h1>

@using (Ajax.BeginForm(new AjaxOptions() { HttpMethod = "POST", OnSuccess = "Success", OnFailure = "Failed" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger list-unstyled" })
    <hr />

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            @Html.LabelFor(model => model.PaymentMethod, new { @class = "input-group-text" })
        </div>
        @Html.EnumDropDownListFor(model => model.PaymentMethod, "Select payment method", new { @class = "form-control" })
    </div>

    <div class="input-group mb-3 my-3 d-flex justify-content-around">
        <a class="btn btn-danger btn-lg text-white" href="/Cart/Details">Cancel</a>
        <input type="submit" value="Process" class="btn btn-success btn-lg" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/Bundles/validate")

    <script src="~/Scripts/custom/notify.js" type="text/javascript"></script>

    <script>
        function Success(result) {
            Redirect(result);
        }

        function Failed(result) {
            ReplaceContent(result.responseText);
            SetNotify("notification-error", "Error", "Something unexpected happend!");
            $('#notify').show();
            HideNotify();
        }
    </script>
}
