@using E_Shop_Engine.Website.Models
@model IList<ProductViewModel>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @if (Model.Any())
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        }

        @if (Model.Count() > 1)
        {
            for (int i = 1; i < Model.Count(); i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @if (Model.Any())
        {
        <div class="carousel-item active">
            <a href="@Url.Action("Details", "Product", new { id = Model.First().Id })">
                <img id="ImgPreview" class="d-block w-100" alt="@Model.First().Name Price: @Model.First().Price.ToString()"
                     src="@Url.Action("GetImage", "Product", new { Model.First().Id })" />
            </a>
        </div>

        }

        @if (Model.Count() > 1)
        {
            for (int i = 1; i < Model.Count(); i++)
            {
        <div class="carousel-item">
            <a href="@Url.Action("Details", "Product", new { id = Model[i].Id })">
                <img id="ImgPreview" class="d-block w-100" alt="@Model[i].Name Price: @Model[i].Price.ToString()"
                     src="@Url.Action("GetImage", "Product", new { Model[i].Id })" />
            </a>
        </div>
            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>