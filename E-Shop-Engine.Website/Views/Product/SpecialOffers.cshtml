@using E_Shop_Engine.Domain.DomainModel
@model IList<Product>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @if (Model.Any())
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        }

        @if (Model.Count() > 1)
        {
            for (int i = 1; i < Model.Count(); i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @if (Model.Any())
        {
            <div class="carousel-item active">
                @Html.Image(Model.First().ImageData, Model.First().ImageMimeType, "d-block w-100", new { alt = Model.First().Name + " Price: " + Model.First().Price.ToString() })
            </div>
        }

        @if (Model.Count() > 1)
        {
            for (int i = 1; i < Model.Count(); i++)
            {
            <div class="carousel-item">
                @Html.Image(Model[i].ImageData, Model[i].ImageMimeType, "d-block w-100", new { alt = Model[i].Name + " Price: " + Model[i].Price.ToString() })
            </div>
            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>